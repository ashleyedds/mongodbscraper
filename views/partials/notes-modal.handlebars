<div class="modal" id="noteModal{{_id}}" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notes for article: {{_id}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      {{#if note}}
        
        
            <p>{{note}}</p>

        

        {{else}}
        <h4>No notes for this article.</h4>
        {{/if}}
        <form>
            <div class="form-group">
                <label for="noteArea">New Note</label>
                <textarea class="form-control" id="noteArea" rows="10"></textarea>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info save-note" data-id={{_id}} data-dismiss="modal">Save Note</button>
      </div>
    </div>
  </div>
  </div>